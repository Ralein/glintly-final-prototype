model User {
  id        String   @id
  username  String?
  email     String?  @unique
  image     String?
  bio       String?
  interests String[] @default([])
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}
