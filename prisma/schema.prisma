generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = "postgresql://neondb_owner:npg_LuHnDG8Y1NZA@ep-floral-wildflower-ad3ytrw5-pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require"
